{
    "name": "obrainwave/laravel-query-filters",
    "description": "A lightweight Laravel search and filter package with global search, aliases, and relationship filtering.",
    "keywords": [
        "obrainwave",
        "laravel",
        "laravel-query-filters"
    ],
    "homepage": "https://github.com/obrainwave/laravel-query-filters",
    "license": "MIT",
    "authors": [
        {
            "name": "Akeem Olaiwola Salau",
            "email": "olaiwolaakeem@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0.0||^10.0.0",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^11.5",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Obrainwave\\LaravelQueryFilters\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Obrainwave\\LaravelQueryFilters\\Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Obrainwave\\LaravelQueryFilters\\LaravelQueryFiltersServiceProvider"
            ],
            "aliases": {
                "QueryFilter": "Obrainwave\\LaravelQueryFilters\\Facades\\QueryFilter"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}